{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types"],
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**.ts",
    "src/**/*.json"
  ]
}